pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                dir('ProjetJenkins/ProjetJenkins') {
                    sh 'dotnet build ProjetJenkins.csproj'
                }
            }
        }
        stage('Test') {
            steps {
                dir('ProjetJenkins/ProjetJenkins') {
                    sh 'dotnet test ProjetJenkins.csproj'
                }
            }
        }
        stage('Docker Build') {
            steps {
                dir('ProjetJenkins/ProjetJenkins') {
                    sh 'docker build -t dkimane/monprojet-image:latest .'
                }
            }
        }
        stage('Docker Push') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: 'https://index.docker.io/v1/']) {
                    sh 'docker push dkimane/monprojet-image:latest'
                }
            }
        }
    }
}
